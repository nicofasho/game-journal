<%- include('../partials/header'); %>

<div>
  <h2>Game Info</h2>
  <div class="form-group">
    <label class="mt-3" for="gameTitle">Game Title</label>
      <input id="gameTitle" placeholder="Game Title" name="gameTitle" type="text" value="" class="form-control" />
      <small class="form-text text-muted">Type in the game you want to write about and hit Enter.</small>
  </div>
  <ul class="list-group" id="results">
  </ul>
  <form action="/posts" method="POST" id="postForm">
    <input type="hidden" name="_id" id="_id">
    <input type="hidden" name="hiddenGameTitle" id="hiddenGameTitle">
    <div class="new-game-info d-none">
      <div class="new-game-desc">
        <h3>Description</h3>
        <p id="description"></p>
      </div>
      <div class="new-game-image d-none">
        <h3>Main Image</h3>
        <div id="gameImage"></div>
      </div>
      <div class="new-game-list d-none">
        <h3>Developers</h3>
        <ul id="devs"></ul>
      </div>
    </div>
    <h2>Post Info</h2>
    <div class="form-group">
      <label for="post-title">Post Title</label>
        <input placeholder="Post Title" type="text" name="title" id="post-title" class="form-control">
    </div>
    <div class="form-group">
      <label for="post-body">Post Body</label>
        <textarea placeholder="Post Body" name="body" id="post-body" cols="30" rows="10" class="form-control"></textarea>
    </div>
    <button class="btn btn-primary">Submit Post</button>
  </form>
</div>


<%- include('../partials/footer'); %>